{
    "name": "bedita/aws",
    "description": "BEdita 5 plugin for applications that use AWS resources such as S3",
    "type": "cakephp-plugin",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-openssl": "*",
        "aws/aws-sdk-php": "^3.222",
        "bedita/core": "dev-5-salix",
        "cakephp/cakephp": "^4.3.9",
        "lcobucci/jwt": "^4.1.5",
        "league/flysystem": "^2.4.3",
        "league/flysystem-aws-s3-v3": "^2.4.3",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "~4.5.1",
        "phpunit/phpunit": "^8.5",
        "phpstan/phpstan": "^1.7.1",
        "cakephp/authentication": "^2.9"
    },
    "suggest": {
        "cakephp/authentication": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "BEdita\\AWS\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEdita\\AWS\\Test\\": "tests"
        }
    },
    "scripts": {
        "cs-check": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf",
        "stan": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit --colors=always"
    },
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
