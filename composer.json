{
    "name": "bedita/aws",
    "description": "BEdita 4 plugin for applications that use AWS resources such as S3",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=7.2.0",
        "ext-openssl": "*",
        "aws/aws-sdk-php": "^3.0.0",
        "bedita/core": "*",
        "cakephp/cakephp": "^3.6.0",
        "lcobucci/jwt": "^3.4",
        "league/flysystem": "^1.0.53",
        "league/flysystem-aws-s3-v3": "^1.0.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^3.0",
        "cakephp/plugin-installer": "^1.0",
        "phpunit/phpunit": "^5.7.14|^6.0",
        "phpstan/phpstan": "^1.5",
        "cakephp/authentication": "^1.0"
    },
    "suggest": {
        "cakephp/authentication": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "BEdita\\AWS\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEdita\\AWS\\Test\\": "tests"
        }
    },
    "scripts": {
        "cs-check": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf",
        "stan": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit --colors=always"
    },
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true
        }
    }
}
